<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.zs.forty.mapper.UserInfoMapper">
    <resultMap id="UserinfoResultMap" type="org.zs.forty.mapper.UserInfoMapper">

    </resultMap>
    <insert id="insert" useGeneratedKeys="true" parameterType="org.zs.forty.model.entity.UserInfo" keyProperty="id">
        INSERT INTO t_user_info
        <trim prefix="(" suffix=")" suffixOverrides=",">

            <if test="id != null">id,</if>
            <if test="user_name != null">user_name,</if>
            <if test="age != null">age,</if>
            <if test="sex != null">sex,</if>
            <if test="phone != null">phone,</if>
            <if test="email != null">email,</if>
            <if test="address != null">address,</if>
            <if test="user_add != null">user_add,</if>

        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="user_name != null">user_Name,</if>
            <if test="age != null">age,</if>
            <if test="sex != null">sex,</if>
            <if test="phone != null">phone,</if>
            <if test="email != null">email,</if>
            <if test="address != null">address,</if>
            <if test="user_add != null">user_Add,</if>

        </trim>
    </insert>
    <update id="update" >
        UPDATE t_user_info
      <set>
          <if test="id != null">id=#{id},</if>
          <if test="user_name != null">user_name=#{userName},</if>
          <if test="age != null">age=#{age},</if>
          <if test="sex != null">sex=#{sex},</if>
          <if test="phone != null">phone=#{phone},</if>
          <if test="email != null">email=#{email},</if>
          <if test="address != null">address=#{address},</if>
          <if test="user_add != null">user_add=#{useradd},</if>
      </set>
    </update>
    <update id="deleteById">
        UPDATE t_user_info
        SET is_delete = 1
        WHERE id = #{id}
        AND is_delete = 0
    </update>
    <select id="selectById" resultType="org.zs.forty.model.vo.UserInfoVO">
        SELECT *
        FROM user_info
        WHERE id = #{id}
    </select>
    <select id="selectByUserId" resultType="org.zs.forty.model.vo.UserInfoVO">
        SELECT *
        FROM user_info
        WHERE id = #{userId}
    </select>
    <select id="selectByUseradd" resultType="org.zs.forty.model.vo.UserInfoVO">
        SELECT *
        FROM user_info
        WHERE user_add = #{userAdd}
    </select>

</mapper>