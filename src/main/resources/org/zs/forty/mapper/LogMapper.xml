<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zs.forty.mapper.LogMapper">
  <resultMap id="LogBaseMap" type="org.zs.forty.model.entity.Log">
    <result column="log_id" property="logId"/>
    <result column="log_level" property="logLevel"/>
    <result column="log_name" property="logName"/>
    <result column="message" property="message"/>
    <result column="user_id" property="userId"/>
    <result column="ip_add" property="ipAdd"/>
    <result column="is_delete" property="isDelete"/>
    <result column="create_time" property="createTime"/>
    <result column="update_time" property="updateTime"/>
  </resultMap>

  <select id="selectByLogId" resultMap="LogBaseMap">
    SELECT * from t_log
    WHERE log_id =#{logId}
    AND is_delete=0
  </select>


  <insert id="add" keyProperty="logId" parameterType="org.zs.forty.model.dto.LogDTO"
      useGeneratedKeys="true">
    INSERT INTO t_log
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="logLevel != null">
        log_level,
      </if>
      <if test="logName != null">
        log_name,
      </if>
      <if test="message != null">
        message,
      </if>
      <if test="userId != null">
        user_id,
      </if>
      <if test="ipAdd != null">
        ip_add,
      </if>
    </trim>
    <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
      <if test="logLevel != null">
        #{logLevel},
      </if>
      <if test="logName != null">
        #{logName},
      </if>
      <if test="message != null">
        #{message},
      </if>
      <if test="userId != null">
        #{userId},
      </if>
      <if test="ipAdd != null">
        ipAdd,
      </if>
    </trim>
  </insert>

  <update id="update">
    UPDATE t_log
    <set>
      <if test="logLevel != null ">
        log_level = #{logLevel},
      </if>
      <if test="logName != null and logName != ''">
        log_name = #{logName},
      </if>
      <if test="message != null and message != ''">
        message = #{message},
      </if>
      <if test="userId != null ">
        user_id=#{userId},
      </if>
      <if test="ipAdd != null">
        ip_add = #{ipAdd},
      </if>
    </set>
    WHERE log_id = #{logId}
    AND is_delete= 0
  </update>

  <update id="delete">
    UPDATE t_log
    SET is_delete = 1
    WHERE log_id = #{logId}
    AND is_delete = 0
  </update>
</mapper>