<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.zs.forty.mapper.StoryMapper">
  <sql id="BaseStory">
    id,title,context,story_img,story_view,story_like,story_comments,story_share,create_time,update_time
  </sql>
  <insert id="insert" useGeneratedKeys="true" parameterType="org.zs.forty.model.entity.Story"
      keyProperty="id">
    INSERT INTO t_story
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="createUser != null">
        create_user,
      </if>
      <if test="title != null">
        title,
      </if>
      <if test="context != null">
        context,
      </if>
      <if test="storyView != null">
        story_view,
      </if>
      <if test="storyImg != null">
        story_img,
      </if>
      <if test="storyLike != null">
        story_like,
      </if>
      <if test="storyComments != null">
        story_comments,
      </if>
      <if test="storyShare != null">
        story_share,
      </if>
      <if test="isOpen != null">
        is_open,
      </if>
    </trim>
    <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
      <if test="createUser != null">
        #{createUser},
      </if>
      <if test="title != null">
        #{title},
      </if>
      <if test="context != null">
        #{context},
      </if>
      <if test="storyImg != null">
        #{storyImg},
      </if>
      <if test="storyView != null">
        #{storyView},
      </if>
      <if test="storyLike != null">
        #{storyLike},
      </if>
      <if test="storyComments != null">
        storyComments,
      </if>
      <if test="storyShare != null">
        storyShare,
      </if>
      <if test="isOpen != null">
        #{isOpen},
      </if>
      <!--      <if test="createTime != null">-->
      <!--        #{createTime},-->
      <!--      </if>-->
      <!--      <if test="updateTime != null">-->
      <!--        #{updateTime},-->
      <!--      </if>-->
    </trim>
  </insert>
  <update id="updateById">
    UPDATE t_story
    <set>
      <if test="createUser != null">
        create_user = #{createUser},
      </if>
      <if test="title != null">
        title = #{title},
      </if>
      <if test="context != null">
        context = #{context},
      </if>
      <if test="storyView != null">
        story_view = #{storyView},
      </if>
      <if test="storyImg != null">
        story_img = #{storyImg},
      </if>
      <if test="storyLike != null">
        story_like=#{storyLike},
      </if>
      <if test="storyComments != null">
        story_comments=#{storyComments},
      </if>
      <if test="storyShare != null">
        story_share=#{storyShare},
      </if>
    </set>
    WHERE id = #{id}
  </update>
  <update id="deleteById">
    update t_story set is_delete = 1 where id = #{id} and is_delete = 0
  </update>
  <select id="selectListByCreateUser" resultType="org.zs.forty.model.entity.Story">
    select<include refid="BaseStory"/>,is_open from t_story
    where create_user = #{create_user} AND is_delete = 0
  </select>
  <select id="selectList" resultType="org.zs.forty.model.entity.Story">
    select<include refid="BaseStory"/>,is_open from t_story
    where is_delete = 0
  </select>
  <select id="selectById" resultType="org.zs.forty.model.entity.Story">
    select<include refid="BaseStory"/>,is_open from t_story
    where id = #{id} AND
    is_delete = 0
  </select>
  <select id="selectOpenByList" resultType="org.zs.forty.model.entity.Story">
    select
    <include refid="BaseStory"/>
    from t_story
    where
    is_delete = 0 and
    is_open = 1
  </select>
  <select id="selectListSort" resultType="org.zs.forty.model.entity.Story">
    SELECT<include refid="BaseStory"/>, (story_like * 0.3 + story_view * 0.1 +
    story_comments * 0.2+story_share * 0.4) AS score
    FROM t_story
    where is_delete = 0
    and is_open = 1
    ORDER BY score DESC;
  </select>
</mapper>