<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.zs.forty.mapper.OrderMapper">


  <insert id="insert" useGeneratedKeys="true" parameterType="org.zs.forty.model.dto.UserDTO"
      keyProperty="id">
    INSERT INTO t_order
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="storyId != null">
        story_id,
      </if>
      <if test="productId != null">
        product_id,
      </if>
      <if test="status != null">
        status,
      </if>
      <if test="createUser != null">
        create_user,
      </if>
      <!--      <if test="createTime != null">-->
      <!--        create_time,-->
      <!--      </if>-->
      <!--      <if test="updateTime != null">-->
      <!--        update_time,-->
      <!--      </if>-->
    </trim>
    <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
      <if test="storyId != null">
        #{storyId},
      </if>
      <if test="productId != null">
        #{productId},
      </if>
      <if test="status != null">
        #{status},
      </if>
      <if test="createUser != null">
        #{createUser},
      </if>
      <!--      <if test="createTime != null">-->
      <!--        #{createTime},-->
      <!--      </if>-->
      <!--      <if test="updateTime != null">-->
      <!--        #{updateTime},-->
      <!--      </if>-->
    </trim>
  </insert>
  <update id="updateById">
    update t_order
    <set>
      <if test="storyId != null">
        story_id = #{storyId},
      </if>
      <if test="productId != null">
        product_id = #{productId},
      </if>
      <if test="status != null">
        status = #{status},
      </if>
      <!--      <if test="createTime != null">-->
      <!--        create_time = #{createTime},-->
      <!--      </if>-->
      <!--      <if test="UpdateTime != null">-->
      <!--        update_time = #{UpdateTime},-->
      <!--      </if>-->
      <if test="createUser != null">
        create_user = #{createUser},
      </if>
    </set>
    WHERE id = #{id}
  </update>
  <update id="deleteById">
    UPDATE t_order
    SET status = 0
    WHERE id = #{id}
  </update>
  <delete id="deleteByCreateUser">

    <!--    delete FROM t_relation WHERE create_user = #{createUser}-->
    <!-- todo-->
  </delete>
  <select id="selectById" resultType="org.zs.forty.model.entity.Order">
    SELECT *
    FROM t_order
    WHERE id = #{id}
  </select>
  <select id="selectByProductId" resultType="org.zs.forty.model.entity.Order">
    SELECT *
    FROM t_order
    WHERE product_id = #{productId}
  </select>
  <select id="selectByStoryId" resultType="org.zs.forty.model.entity.Order">
    SELECT *
    FROM t_order
    WHERE story_id = #{storyId}
  </select>
  <select id="selectByCreateUser" resultType="org.zs.forty.model.entity.Order">
    SELECT *
    FROM t_order
    WHERE create_user = #{createUser}
  </select>


</mapper>