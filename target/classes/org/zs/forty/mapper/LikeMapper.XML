<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.zs.forty.mapper.LikeMapper">
    <resultMap id="LikeResultMap" type="org.zs.forty.mapper.LikeMapper">

    </resultMap>
    <insert id="insert" useGeneratedKeys="true" parameterType="org.zs.forty.mapper.LikeMapper" keyProperty="likeid">
        INSERT INTO t_like
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="likeId !=null">
                like_id,
            </if>
            <if test="userid !=null">
                user_id,
            </if>
            <if test="storyId !=null">
                story_id,
            </if>

       <if test="isDelete != null">
            is_delete,
        </if>
        <if test="createTime != null">
            create_time,
        </if>
        <if test="updateTime != null">
            update_time,
        </if>
        </trim>
        <if test="isDelete != null">
            VALUES (#{likeId}, #{userid}, #{storyId}, #{isDelete}, #{createTime}, #{updateTime})
        </if>
        <if test="isDelete != null and isDelete == 0">
            ON DUPLICATE KEY UPDATE
                like_id = VALUES(like_id),
                user_id = VALUES(user_id),
                story_id = VALUES(story_id),
                is_delete = VALUES(is_delete),
                create_time = VALUES(create_time),
                update_time = VALUES(update_time)
        </if>
    </insert>

    <!-- 查询操作 -->
    <select id="getLikeById" resultMap="LikeResultMap">
        SELECT * FROM like WHERE like_id = #{likeId}
    </select>
    <select id="selectAll" resultType="org.zs.forty.model.entity.Like">
        select
        like_id as likeId,user_id as userid,story_id as storyId,is_delete as isDelete;
        from t_like;
    </select>
    <select id="selectByLikeId" resultType="org.zs.forty.model.entity.Like">
        select * from t_like where like_id = #{likeId};
    </select>

    <select id="selectByUserId" resultType="org.zs.forty.model.entity.Like">
         select * from t_like  where user_id = #{userId};
    </select>
    <select id="selectByStoryId" resultType="org.zs.forty.model.entity.Like">
        select *  from t_like where story_id = #{storyId};
    </select>
    <delete id="deleteById">
        UPDATE t_like SET is_delete = 1 WHERE id = #{id} AND is_delete = 0

    </delete>
</mapper>